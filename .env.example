############################
# State management core service settings
############################
STATE_MANAGEMENT_SECRET_KEY=change-this-to-a-secure-key
STATE_MANAGEMENT_FLASK_ENV=development
STATE_MANAGEMENT_HOST=127.0.0.1
STATE_MANAGEMENT_PORT=55103
STATE_MANAGEMENT_LOG_LEVEL=INFO

############################
# MongoDB Connection Settings
############################
MONGODB_HOST=127.0.0.1
MONGODB_PORT=55101
MONGODB_USERNAME=web_ui
MONGODB_PASSWORD=change_this_password
MONGODB_DATABASE=web_db
MONGODB_AUTH_SOURCE=admin
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
DOCKER_MONGODB_HOST=host.docker.internal

############################
# MongoDB Collection Names
############################
MONGODB_COLLECTION=recordings
MONGODB_COLLECTION_RECORDINGS=recordings
MONGODB_COLLECTION_ANALYSIS_CONFIGS=analysis_configs
MONGODB_COLLECTION_ROUTING_RULES=routing_rules
MONGODB_COLLECTION_INSTANCES=mongodb_instances
MONGODB_COLLECTION_TASK_LOGS=task_execution_logs
MONGODB_COLLECTION_NODES_STATUS=node_status
MONGODB_COLLECTION_SYSTEM_METADATA=system_metadata
MONGODB_COLLECTION_USERS=users

############################
# RabbitMQ
############################
RABBITMQ_HOST=127.0.0.1
RABBITMQ_PORT=55102
RABBITMQ_MANAGEMENT_PORT=55112
RABBITMQ_USERNAME=admin
RABBITMQ_PASSWORD=change_this_password
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=analysis_tasks_exchange
RABBITMQ_QUEUE=analysis_tasks_queue
RABBITMQ_ROUTING_KEY_PREFIX=analysis
RABBITMQ_ROUTING_KEY_BINDING=analysis.#
RABBITMQ_MESSAGE_TTL_MS=86400000
RABBITMQ_HEARTBEAT=600
RABBITMQ_BLOCKED_TIMEOUT=300
DOCKER_RABBITMQ_HOST=host.docker.internal

############################
# Node Monitor Settings
############################
NODE_HEARTBEAT_INTERVAL=5
NODE_HEARTBEAT_TIMEOUT=30

############################
# WebSocket Settings
############################
WEBSOCKET_ASYNC_MODE=threading
WEBSOCKET_PING_TIMEOUT=6
WEBSOCKET_PING_INTERVAL=2
WEBSOCKET_CORS_ALLOWED_ORIGINS=*

############################
# File Upload Settings
############################
MAX_UPLOAD_FILE_SIZE_MB=500
ALLOWED_MODEL_EXTENSIONS=.pkl,.pth,.h5,.onnx,.pb

############################
# Logging Settings
############################
LOG_DIR=logs
CLEAR_LOGS_ON_STARTUP=false
LOG_BACKUP_COUNT=30

############################
# UI Behavior Settings
############################
USE_TOAST_FOR_ALERTS=true

############################
# State Management Service URL (for other services to connect)
############################
STATE_MANAGEMENT_URL=http://127.0.0.1:55103
STATE_MANAGEMENT_TIMEOUT=10

############################
# Admin Initialization Settings
############################
INIT_ADMIN_USERNAME=admin
INIT_ADMIN_EMAIL=admin@example.com
INIT_ADMIN_PASSWORD=change_this_password

############################
# Upload / paths
############################
UPLOAD_FOLDER=uploads
EDGE_SERVER_URL=http://127.0.0.1:5000
EDGE_TEMP_WAV_DIR=temp_wav
EDGE_DEVICE_CONFIG_PATH=device_config.json
